//snippet-sourcedescription:[This IAM identity-based permission policy demonstrates how to grant a user access to download a report.]
//snippet-keyword:[IAM Policy]
//snippet-keyword:[Code Sample]
//snippet-keyword:[AWS Artifact]
//snippet-service:[artifact]
//snippet-sourcetype:[full-example]
//snippet-sourcedate:[]
//snippet-sourceauthor:[AWS]
//snippet-start:[artifact.iam_policy.grants_attached_user_access_to_download_a_report]
{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "artifact:Get"
            ],
            "Resource": [
                "arn:aws:artifact:::report-package/*"
            ]
        }
    ]
}
//snippet-end:[artifact.iam_policy.grants_attached_user_access_to_download_a_report]
