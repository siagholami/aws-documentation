//snippet-sourcedescription:[This IAM identity-based permission policy demonstrates how to grant a user access to create, view, or delete an AWS Cost and Usage report using the API.]
//snippet-keyword:[IAM Policy]
//snippet-keyword:[Code Sample]
//snippet-keyword:[Billing and Cost Management]
//snippet-service:[billing]
//snippet-sourcetype:[full-example]
//snippet-sourcedate:[]
//snippet-sourceauthor:[AWS]
//snippet-start:[billing.iam_policy.grants_attached_user_access_to_the_cost_and_usage_reports_api]
{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "cur:DeleteReportDefinition",
                "cur:DescribeReportDefinitions",
                "cur:PutReportDefinition"

            ],
            "Resource": [
                "*"
            ]
        }
    ]
}
//snippet-end:[billing.iam_policy.grants_attached_user_access_to_the_cost_and_usage_reports_api]
