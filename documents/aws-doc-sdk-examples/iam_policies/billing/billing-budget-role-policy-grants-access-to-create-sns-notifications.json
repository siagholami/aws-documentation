//snippet-sourcedescription:[This file demonstrates how you could use an IAM identity-based policy to grant access to the Simple Notification Service.]
//snippet-keyword:[IAM Policy]
//snippet-keyword:[Code Sample]
//snippet-keyword:[Billing and Cost Management]
//snippet-service:[billing]
//snippet-sourcetype:[full-example]
//snippet-sourcedate:[]
//snippet-sourceauthor:[AWS]
//snippet-start:[billing.iam_policy.role_policy_grants_publish_access_to_simple_notification_service]
{
  "Sid": "AllowAccessToPublishSNSNotifications",
  "Effect": "Allow",
  "Principal": {
    "Service": "budgets.amazonaws.com"
  },
  "Action": "SNS:Publish",
  "Resource": "<your topic ARN>"
}
//snippet-end:[billing.iam_policy.role_policy_grants_publish_access_to_simple_notification_service]
