//snippet-sourcedescription:[This IAM identity-based permission policy demonstrates how to grant individual access to modify billing information.]
//snippet-keyword:[IAM Policy]
//snippet-keyword:[Code Sample]
//snippet-keyword:[Billing and Cost Management]
//snippet-service:[billing]
//snippet-sourcetype:[full-example]
//snippet-sourcedate:[]
//snippet-sourceauthor:[AWS]
//snippet-start:[billing.iam_policy.grants_attached_user_access_to_modify_billing_information]
{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "aws-portal:*Billing",
            "Resource": "*"
        }
    ]
}
//snippet-end:[billing.iam_policy.grants_attached_user_access_to_modify_billing_information]
