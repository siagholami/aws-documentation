//snippet-sourcedescription:[This IAM identity-based permission policy demonstrates how to grant a user permissions to create transcoder jobs.]
//snippet-keyword:[IAM Policy]
//snippet-keyword:[Code Sample]
//snippet-keyword:[Amazon Elastic Transcoder]
//snippet-service:[elastictranscoder]
//snippet-sourcetype:[full-example]
//snippet-sourcedate:[]
//snippet-sourceauthor:[AWS]
//snippet-start:[elastictranscoder.iam_policy.grants_attached_user_access_to_create_transcoder_jobs]
{
    "Version":"2012-10-17",
    "Statement": [
       {
           "Effect": "Allow",
           "Action": [
               "elastictranscoder:Read*",
               "elastictranscoder:List*",
               "elastictranscoder:*Job",
               "elastictranscoder:*Preset",
               "s3:List*",
               "sns:List*"
           ],
           "Resource": "*"
       }
    ]
}
//snippet-end:[elastictranscoder.iam_policy.grants_attached_user_access_to_create_transcoder_jobs]
